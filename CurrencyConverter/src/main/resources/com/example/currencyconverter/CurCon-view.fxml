<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.currencyconverter.CurController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="title" text="Welcome to Currency Converter"/>
    <Label text="Please choose your currencies below"/>
    <Label text="Converting from:"/>
    <ChoiceBox fx:id="currencyFrom"/>
    <Label text="Converting to"/>
    <ChoiceBox fx:id="currencyTo"/>
    <Label text="Please enter the amount you would like to convert:"/>
    <TextField fx:id="inputAmount"/>
    <Button text="Go!" onAction="#onGoButtonClick"/>
    <Label fx:id="result"/>
</VBox>
